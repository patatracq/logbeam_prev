<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="agentTemplateLogFileList" class="logbeam.client.LogFileList">
		<property name="binding" ref="agentTemplateLogFilesBinding" />
	</bean>
	
	<bean id="agentTemplateDetailDialog" class="springclient.Dialog">
		<property name="title" value="Agent Template Detail" />
		<property name="resizable" value="false" />
		<property name="mainPanel"><bean class="springclient.panel.YBoxPanel">
			<property name="alignX" ref="COMP_LEFT" />
			<property name="components"><list>
				<bean class="springclient.panel.GridPanel">
					<property name="alignX" ref="COMP_LEFT" />
					<property name="items"><list>
						<bean class="springclient.panel.GridPanelItem">
							<property name="align" ref="GRIDPANEL_LEFT" />
							<property name="row" value="0" />
							<property name="component">
								<bean class="springclient.text.Label"><property name="caption" value="Template:" /></bean>
							</property>
						</bean>
						
						<bean class="springclient.panel.GridPanelItem">
							<property name="align" ref="GRIDPANEL_LEFT" />
							<property name="row" value="1" />
							<property name="component"><bean class="springclient.text.TextField">
								<constructor-arg value="25" />
								<constructor-arg ref="agentTemplateNameBinding" />
							</bean></property>
						</bean>
						
						<bean class="springclient.panel.GridPanelItem">
							<property name="align" ref="GRIDPANEL_LEFT" />
							<property name="row" value="2" />
							<property name="component">
								<bean class="springclient.text.Label"><property name="caption" value="Log File Templates:" /></bean>
							</property>
						</bean>
						
						<bean class="springclient.panel.GridPanelItem">
							<property name="align" ref="GRIDPANEL_LEFT" />
							<property name="row" value="3" />
							<property name="component"><bean class="springclient.list.List">
								<constructor-arg><bean class="springclient.list.GenericListModel">
									<constructor-arg><ref bean="agentTemplateLogFileList" /></constructor-arg>
								</bean></constructor-arg>
							</bean></property>
						</bean>

						<bean class="springclient.panel.GridPanelItem">
							<property name="row" value="4" />
							<property name="align" ref="GRIDPANEL_RIGHT" />
							<property name="component"><bean class="springclient.panel.XBoxPanel">
								<property name="components"><list>
									<bean class="springclient.simple.Button">
										<property name="caption" value="Add Log File..." />
										<property name="action" ref="openLogFileTemplateAction" />
									</bean>
								</list></property>
							</bean></property>
						</bean>

						<bean class="springclient.panel.GridPanelItem">
							<property name="row" value="5" />
							<property name="align" ref="GRIDPANEL_RIGHT" />
							<property name="component"><bean class="springclient.panel.XBoxPanel">
								<property name="components"><list>
									<bean class="springclient.simple.Button">
										<property name="caption" value="Cancel" />
										<property name="action">
											<bean class="springclient.action.DialogCancel">
												<property name="dialog" ref="agentTemplateDetailDialog" />
											</bean>
										</property>
									</bean>
									<bean class="springclient.simple.Button">
										<property name="caption" value="Delete" />
										<property name="action">
											<bean class="springclient.action.DialogClose">
												<property name="dialog" ref="agentTemplateDetailDialog" />
												<property name="action" ref="deleteAgentTemplateAction" />
											</bean>
										</property>
									</bean>
									<bean class="springclient.simple.DialogDefaultButton">
										<property name="caption" value="Save" />
										<property name="dialog" ref="agentTemplateDetailDialog" />
										<property name="action">
											<bean class="springclient.action.DialogOk">
												<property name="dialog" ref="agentTemplateDetailDialog" />
												<property name="action" ref="saveAgentTemplateAction" />
											</bean>
										</property>
									</bean>
								</list></property>
							</bean></property>
						</bean>
					</list></property>
				</bean>
			</list></property>
		</bean></property>
	</bean>
</beans>
