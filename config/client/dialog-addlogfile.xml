<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="addLogFileDialog" class="springclient.Dialog">
		<property name="title" value="Add Log File" />
		<property name="resizable" value="false" />
		<property name="mainPanel"><bean class="springclient.panel.YBoxPanel">
			<property name="alignX" ref="COMP_LEFT" />
			<property name="components"><list>
				<bean class="springclient.panel.GridPanel">
					<property name="alignX" ref="COMP_LEFT" />
					<property name="items"><list>
						<bean class="springclient.panel.GridPanelItem">
							<property name="align" ref="GRIDPANEL_LEFT" />
							<property name="row" value="0" />
							<property name="column" value="0" />
							<property name="component">
								<bean class="springclient.text.Label"><property name="caption" value="Log File:" /></bean>
							</property>
						</bean>
						
						<bean class="springclient.panel.GridPanelItem">
							<property name="align" ref="GRIDPANEL_LEFT" />
							<property name="row" value="0" />
							<property name="column" value="1" />
							<property name="component"><bean class="springclient.text.TextField">
								<constructor-arg value="25" />
								<constructor-arg ref="logFilenameBinding" />
							</bean></property>
						</bean>
						
						<bean class="springclient.panel.GridPanelItem">
							<property name="row" value="1" />
							<property name="align" ref="GRIDPANEL_RIGHT" />
							<property name="component">
								<bean class="springclient.panel.XBoxPanel">
									<property name="components"><list>
										<bean class="springclient.simple.DialogDefaultButton">
											<property name="caption" value="OK" />
											<property name="dialog" ref="addLogFileDialog" />
											<property name="action"><bean class="springclient.action.DialogOk">
												<property name="dialog" ref="addLogFileDialog" />
												<property name="action" ref="addToLogFileListAction" />
											</bean></property>
										</bean>

										<bean class="springclient.simple.Button">
											<property name="caption" value="Avbryt" />
											<property name="action"><bean class="springclient.action.DialogCancel"><property name="dialog" ref="addLogFileDialog" /></bean></property>
										</bean>
									</list></property>
								</bean>
							</property>
						</bean>
					</list></property>
				</bean>
			</list></property>
		</bean></property>
	</bean>
</beans>
