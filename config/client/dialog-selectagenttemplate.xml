<beans
		xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="agentTemplateCombo" class="logbeam.client.AgentTemplateCombo">
		<property name="agentTemplateContainer" ref="agentTemplateCyberspaceContainer" />
	</bean>
	
	<bean id="selectAgentTemplateDialog" class="springclient.Dialog">
		<property name="title" value="Select Agent Template" />
		<property name="resizable" value="false" />
		<property name="mainPanel"><bean class="springclient.panel.YBoxPanel">
			<property name="components"><list>
				<bean class="springclient.panel.XBoxPanel">
					<property name="components"><list>
						<bean class="springclient.text.Label">
							<property name="caption" value="Templates:" />
						</bean>
						
						<bean class="springclient.combo.ComboBox"><constructor-arg>
							<bean class="springclient.combo.GenericComboModel"><constructor-arg ref="agentTemplateCombo" /></bean>
						</constructor-arg></bean>
					</list></property>	
				</bean>
				<bean class="springclient.panel.XBoxPanel">
					<property name="components"><list>
						<bean class="springclient.simple.Button">
							<property name="caption" value="Cancel" />
							<property name="action">
								<bean class="springclient.action.DialogCancel">
									<property name="dialog" ref="selectAgentTemplateDialog" />
								</bean>
							</property>
						</bean>
						<bean class="springclient.simple.DialogDefaultButton">
							<property name="caption" value="Select" />
							<property name="dialog" ref="selectAgentTemplateDialog" />
							<property name="action">
								<bean class="springclient.action.DialogOk">
									<property name="dialog" ref="selectAgentTemplateDialog" />
								</bean>
							</property>
						</bean>
					</list></property>	
				</bean>
			</list></property>
		</bean></property>
	</bean>
</beans>
